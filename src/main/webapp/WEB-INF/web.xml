<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Phoneshop servlet api training</display-name>

    <servlet>
        <servlet-name>productList</servlet-name>
        <servlet-class>com.es.phoneshop.web.ProductListPageServlet</servlet-class>
    </servlet>

    <context-param>
        <param-name>maxHistorySize</param-name>
        <param-value>3</param-value>
    </context-param>

    <servlet-mapping>
        <servlet-name>productList</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productDetails</servlet-name>
        <servlet-class>com.es.phoneshop.web.ProductDetailsPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productDetails</servlet-name>
        <url-pattern>/products/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cartPageServlet</servlet-name>
        <servlet-class>com.es.phoneshop.web.CartPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cartPageServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cartItemDeleteServlet</servlet-name>
        <servlet-class>com.es.phoneshop.web.CartItemDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cartItemDeleteServlet</servlet-name>
        <url-pattern>/cart/deleteCartItem/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>checkoutPageServlet</servlet-name>
        <servlet-class>com.es.phoneshop.web.CheckoutPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>checkoutPageServlet</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderOverviewPageServlet</servlet-name>
        <servlet-class>com.es.phoneshop.web.OrderOverviewPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>orderOverviewPageServlet</servlet-name>
        <url-pattern>/order/overview/*</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>com.es.phoneshop.model.product.exceptions.ProductNotFoundException</exception-type>
        <location>/WEB-INF/pages/productNotFound.jsp</location>
    </error-page>

    <error-page>
        <exception-type>com.es.phoneshop.model.product.exceptions.OrderNotFoundException</exception-type>
        <location>/WEB-INF/pages/orderNotFound.jsp</location>
    </error-page>

    <filter>
        <filter-name>dosFilter</filter-name>
        <filter-class>com.es.phoneshop.web.DosFilter</filter-class>
        <init-param>
            <param-name>maxConnectionsPerMinute</param-name>
            <param-value>60</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>dosFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>com.es.phoneshop.web.ProductDemodataServletContextListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.es.phoneshop.web.ProductRecentlyViewedServletContextListener</listener-class>
    </listener>

</web-app>
